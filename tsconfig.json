{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
